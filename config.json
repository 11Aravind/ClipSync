{
  "maxHistorySize": 50,
  "shortcuts": {
    "openHistory": "Super+V",
    "quickPaste": "Super+Shift+V"
  },
  "window": {
    "width": 400,
    "height": 600,
    "alwaysOnTop": true,
    "skipTaskbar": true
  },
  "clipboard": {
    "monitorInterval": 1000,
    "autoStart": true
  },
  "ui": {
    "theme": "auto",
    "showTimestamps": true,
    "showType": true
  },
  "tray": {
    "showIcon": true,
    "showNotifications": true
  }
} 