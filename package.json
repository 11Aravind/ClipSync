{
  "name": "clipsync",
  "version": "1.0.0",
  "description": "ClipSync - A comprehensive clipboard manager for Linux with Windows-like functionality",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev --no-sandbox",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "clipboard",
    "manager",
    "linux",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.clipsync.app",
    "productName": "ClipSync",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
} 